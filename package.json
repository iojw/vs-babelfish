{
  "name": "vs-babelfish",
  "displayName": "BabelFish",
  "description": "Automatically translate code documentation to your preferred language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Enable BabelFish",
        "command": "vs-babelfish.enableCodeLens",
        "category": "BabelFish"
      },
      {
        "title": "Disable BabelFish",
        "command": "vs-babelfish.disableCodeLens",
        "category": "BabelFish"
      }
    ],
    "configuration": {
      "properties": {
        "vs-babelfish.enableCodeLens": {
		  "type": "boolean",
		  "title": "Enable",
		  "description": "Enable/Disable BabelFish",
          "default": true
        },
        "vs-babelfish.language": {
          "type": "string",
          "title": "Language",
          "description": "Your preferred language for BabelFish translation",
          "default": "ja"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "axios": "^0.19.2",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
